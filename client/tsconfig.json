{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "jsx": "react",
        "jsxFactory": "createElement",
        "noImplicitAny": false,
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    }
}